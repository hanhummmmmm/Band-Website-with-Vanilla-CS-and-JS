<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600&family=Lato&family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="custom.css">
    <script src="https://js.stripe.com/v3/"> defer </script>
    <script src="store.js" defer></script>
    <title>Flowerface | Store </title>
</head>
<body>
    <header class="hero-image h-72"> <!--does not apply any styling  but tells page its the header -->
        <nav class="border-white border-b-2 border-opacity-30">  <!--does not apply any styling  but tells page its the navbar -->
            <ul class="flex flex-row justify-center space-x-10 pt-2">
                <li class="menu-item"> <a href="http://localhost:3000/"> HOME </a> </li>
                <li class="menu-item"> <a href="http://localhost:3000/about"> ABOUT </a></li>
                <li class="menu-item"> <a href="http://localhost:3000/store"> STORE </a> </li>
            </ul>
        </nav>
        <!--TODO: Find a suitable background image -->
        <div class="flex flex-col justify-center mt-8">
            <div class="flex justify-center mt-5 my-auto">
                <h1 class="font-cursive text-white text-7xl md:text-9xl"> Flowerface </h1>
            </div>
        </div>
    </header>



    <section class="ml-20 mr-20 mx-auto mt-10">
        <h2 class="font-serif text-3xl text-gray-600 text-center mb-10">MUSIC</h2>

        <div class="grid lg:grid-cols-4 gap-4 md:grid-cols-2 grid-cols-1 auto-cols-min">

            <% items.music.forEach(function(item){ %>
            <div class="p-3 border-gray-400 border-2 border-opacity-20" data-item-id="<%= item.id %>">
                <strong class="item-name font-sans font-semibold text-center block mb-1"><%= item.name %></strong>
                <img class="item-image" src="Images/<%= item.imgName %>" alt="Baby Teeth">
                <div class="mx-auto text-center block mt-1">
                    <span class="item-price mr-5 ml-1" > $<%= item.price /100 %> </span>
                    <button type="button" class="btn-item"> ADD TO CART </button>
                </div>
            </div>
            <% }) %>
        </div>

    </section>


    <section class="ml-20 mr-20 mx-auto mt-10">
        <h2 class="font-serif text-3xl text-gray-600 text-center mb-10">MERCH</h2>

        <div class="grid lg:grid-cols-4 gap-4 md:grid-cols-2 grid-cols-1 auto-cols-min">

            <% items.merch.forEach(function(item){ %>
                <div class="p-3 border-gray-400 border-2 border-opacity-20 lg:col-start-<%= item.colStart%>" data-item-id="<%= item.id %>">
                    <strong class="item-name font-sans font-semibold text-center block mb-1"><%= item.name %></strong>
                    <img class="item-image" src="Images/<%= item.imgName %>" alt="Baby Teeth">
                    <div class="mx-auto text-center block mt-1">
                        <span class="item-price mr-5 ml-1" > $<%= item.price /100 %> </span>
                        <button type="button" class="btn-item"> ADD TO CART </button>
                    </div>
                </div>
                <% }) %>
        </div>
            
    </section>

    <section class="ml-20 mr-20 mx-auto mt-20">
        <h2 class="font-serif text-3xl text-gray-600 text-center mb-10">CART</h2>
        
        <div class="grid grid-cols-4 justify-items-center">
            <strong class="table-bottom-border">ITEM</strong>
            <strong class="table-bottom-border">PRICE</strong>
            <strong class="table-bottom-border col-start-3 col-span-2">QUANTITY</strong>
        </div>

        <div class="cart-items">
        </div>

        <div class="grid grid-cols-4 justify-items-center items-center mt-2">
            <div class="grid grid-cols-2 justify-items-start pl-10 col-start-3 col-span-2">
            <strong>TOTAL:</strong>
            <span class="cart-total-price pl-6 sm:pl-0"> $0.00 </span>
            </div>
        </div>

        <div class="flex justify-center">
            <button type="button" class="btn-purchase"> PURCHASE </button>
        </div>
    </section>
    






    <footer class="bg-purple-light mt-10"> 
        <div class="flex flex-row justify-between">
            <h3 class="font-cursive text-white text-5xl self-center ml-5">Flowerface</h3>
            <ul class="flex flex-col">
                <li><a href="https://facebook.com" target="_blank"><img class="footer-social-icon m-1 mt-2 mr-5" src="Images/Facebook Logo.png" alt="Facebook logo"></a></li>
                <li><a href="https://spotify.com" target="_blank"><img class="footer-social-icon m-1 mr-5" src="Images/Spotify Logo.png" alt="Spotify logo"></a></li>
                <li><a href="https://youtube.com" target="_blank"><img class="footer-social-icon m-1 mb-2 mr-5" src="Images/YouTube Logo.png" alt="Youtube logo"></a></li>
            </ul>
        </div>
    </footer>
</body>
</html>